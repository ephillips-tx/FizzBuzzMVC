@model FizzBuzzMVC.Models.FizzBuzz

<div class="container mb-0 pb-3">
    <div class="row row-cols-1 row-cols-lg-2">
        <div class="col col-lg-4 border-end border-2">
            <h1 class="display-6 fw-bold lh-1 mb-3"><span class="logoFont">FizzBuzz</span>: A Coding Project</h1>
            <h4 class="lead">
                Don't "Buzz" when you need to "Fizz." Thankfully, this program can help with that!
                Introducing <span class="logoFont text-warning">FIZZBUZZ</span>, A javascript coding exercise utilizing loops &amp; logic.
            </h4>
            <h2 class="display-7 fw-bold lh-1 mt-5 border-bottom border-2">Instructions</h2>
            <p>
                Write a program that displays each number from 1 to 100. For each multiple of the "Fizz Number", display "Fizz"
                instead of the number. For each multiple of the "Buzz Number", display "Buzz" instead of the number.
                For numbers which are multiples of both, display "FizzBuzz" instead.
            </p>
        </div>
        <div class="col col-lg-8">
            <div class="row gx-3 gy-2">
                <div class="col">
                    <h5>Enter Numbers</h5>
                    @* Form goes here *@
                    <form asp-controller="Home" asp-action="FBPage" method="post">
                        <div class="form-group">
                            <label asp-for="FizzValue">Fizz Value</label>
                            <input type="number" asp-for="FizzValue" class="form-control" placeholder="Enter Fizz" value="@Model.FizzValue" />
                        </div>
                        <div class="form-group pb-3">
                            <label asp-for="BuzzValue">Buzz Value</label>
                            <input type="number" asp-for="BuzzValue" class="form-control" placeholder="Enter Buzz" value="@Model.BuzzValue" />
                        </div>
                        <button type="submit" class="btn btn-dark">Buzz It!</button>
                    </form>
                </div>
            </div>
            <h2 class="mt-5 border-bottom border-2">Results</h2>
            <div class="table-responsive">
                @* Table goes here *@
                @if (@Model.Result.Count > 0)
                {
                    <table class="table table-striped table-dark table-hover">
                        <thead>
                            <tr><th colspan="5">Fizz Buzz Results</th></tr>
                        </thead>
                        @* 
                            Display Loop: the instance of FizzBuzz has a List<string> 
                            called Result which holds strings set by the controller
                        *@
                        @for (int i = 0; i < Model.Result.Count(); i += 5)
                        {
                            <tr><td>@Model.Result[i]</td><td>@Model.Result[i + 1]</td><td>@Model.Result[i + 2]</td><td>@Model.Result[i + 3]</td><td>@Model.Result[i + 4]</td></tr>
                        }
                    </table>
                }
            </div>
        </div>
    </div>
</div>